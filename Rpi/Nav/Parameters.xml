<?xml version="1.0" encoding="UTF-8"?>
<parameters opcode_base="10">
    <!-- Simple P parameter set -->
    <parameter id="0" set_opcode="1" save_opcode="2"
               name="SIMPLE_CENTER" data_type="F32" default="0.5">
        <comment>
            Scalar from 0.0 to 1.0 representing the center position of the car.
            0.0 is the left side of the image, 1.0 is the right of the image.
        </comment>
    </parameter>
    <parameter id="1" set_opcode="3" save_opcode="4"
               name="SIMPLE_P" data_type="F32" default="2.0">
        <comment>
            Proportional constant turning factor. Scaled by distance
            from center line.
        </comment>
    </parameter>
    <parameter id="2" set_opcode="5" save_opcode="6"
               name="SIMPLE_ROW" data_type="F32" default="0.5">
        <comment>
            Which row on the camera should we scan
        </comment>
    </parameter>
    <parameter id="3" set_opcode="7" save_opcode="8"
               name="SIMPLE_THROTTLE" data_type="F32" default="0.35">
        <comment>
            Constant throttle to run the car during simple mode
        </comment>
    </parameter>
    <parameter id="4" set_opcode="9" save_opcode="10"
               name="SIMPLE_CUTOFF" data_type="F32" default="0.05">
        <comment>
            Ratio of image to cut off of each side
        </comment>
    </parameter>

    <!-- Simple PID parameter set -->
    <parameter id="5" set_opcode="11" save_opcode="12"
               name="SIMPLE_PID_P" data_type="F32" default="0.5">
        <comment>
            P coefficient
        </comment>
    </parameter>
    <parameter id="6" set_opcode="13" save_opcode="14"
               name="SIMPLE_PID_I" data_type="F32" default="0.5">
        <comment>
            I coefficient
        </comment>
    </parameter>
    <parameter id="7" set_opcode="15" save_opcode="16"
               name="SIMPLE_PID_D" data_type="F32" default="0.5">
        <comment>
            D coefficient
        </comment>
    </parameter>
    <parameter id="8" set_opcode="17" save_opcode="18"
               name="SIMPLE_PID_T" data_type="F32" default="0.5">
        <comment>
            Throttle coefficient
        </comment>
    </parameter>
</parameters>