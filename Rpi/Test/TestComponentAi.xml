<?xml version="1.0" encoding="UTF-8"?>

<component name="Test" kind="active" namespace="Svc">
    <import_port_type>Svc/Sched/SchedPortAi.xml</import_port_type>
    <comment>A rate group active component with input and output scheduler ports</comment>
    <ports>
        <!-- Input time cycle port -->
        <port name="schedIn" data_type="Sched" kind="async_input" max_number="1" full="drop">
            <comment>
                The rate group cycle input
            </comment>
        </port>

    </ports>
    <telemetry>
        <channel id="0" name="NumCycle" data_type="U32" update="on_change" format_string="%u cycles">
            <comment>
                Number of cycles run
            </comment>
        </channel>
    </telemetry>
    <events>
        <event id="0" name="AssertOccurred" severity="FATAL" format_string="%s">
            <comment>
                Send FATAL information to the logger to be downlinked
            </comment>
            <args>
                <arg name="assertMsg" type="string" size="120">
                    <comment>The assert message</comment>
                </arg>
            </args>
        </event>
        <event id="1" name="TestCycle" severity="DIAGNOSTIC" format_string="Test cycle ran: %d">
            <comment>
                Informational event that rate group has started
            </comment>
            <args>
                <arg name="cycle" type="U32">
                    <comment>The cycle number</comment>
                </arg>
            </args>
        </event>
    </events>
    <commands>
        <command kind="async" opcode="0x00" mnemonic="TOGGLE">
            <comment>
                Toggle the cycle signal
            </comment>
        </command>
    </commands>
</component>

