<events>
    <event id="0" name="VisStreaming" severity="ACTIVITY_LO"
           format_string="Vision is now streaming to %s">
        <args>
            <arg name="port_number" type="Rpi::VisListener"/>
        </args>
    </event>
    <event id="1" name="VisStopping" severity="ACTIVITY_LO"
           format_string="Vision stopped streaming to %s">
        <args>
            <arg name="port_number" type="Rpi::VisListener"/>
        </args>
    </event>
    <event id="2" name="VisCleared" severity="ACTIVITY_LO"
           format_string="Vision pipeline has been cleared">
    </event>
    <event id="3" name="VisPipe" severity="ACTIVITY_LO"
           format_string="Added %s to vision pipeline">
        <args>
            <arg name="pipe" type="Rpi::VisPipe"/>
        </args>
    </event>
    <event id="4" name="VisRecord" severity="ACTIVITY_LO"
           format_string="Recording vision DP from %s to %s">
        <args>
            <arg name="stage" type="Rpi::VisPipe"/>
            <arg name="filename" type="string" size="80"/>
        </args>
    </event>
</events>
