<?xml version="1.0" encoding="UTF-8" ?>
<commands>
    <command kind="sync" opcode="0" mnemonic="CAPTURE">
        <comment>
            Capture a single image and save it to a file
        </comment>

        <args>
            <arg name="destination" type="string" size="80"/>
        </args>
    </command>
    <command kind="sync" opcode="1" mnemonic="CONFIGURE">
        <comment>
            Load all changes to camera parameters into the camera
            This will restart the camera stream
        </comment>
    </command>
</commands>
