<?xml version="1.0" encoding="UTF-8"?>
<interface name="CamBuffer" namespace="Drv">
    <import_enum_type>src/RpiSpiDriver/SpiStatusEnumAi.xml</import_enum_type>
    <include_header>Fw/Buffer/Buffer.hpp</include_header>
    <comment>Reply to SPI caller when DMA was requested</comment>
    <args>
        <arg name="status" type="Drv::SpiStatus">
            <comment>Status of the DMA transaction</comment>
        </arg>
        <arg name="chipSelect" type="U32">
            <comment>chipSelect of the transaction</comment>
        </arg>
        <arg name="writeBuffer" type="Fw::Buffer" pass_by="reference">
            <comment>Master to slave buffer</comment>
        </arg>
        <arg name="readBuffer" type="Fw::Buffer" pass_by="reference">
            <comment>Slave to master buffer</comment>
        </arg>
    </args>
</interface>
