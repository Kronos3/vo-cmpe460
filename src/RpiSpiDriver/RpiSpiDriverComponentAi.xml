<?xml version="1.0" encoding="UTF-8"?>
<component name="RpiSpiDriver" kind="passive" namespace="Drv">

    <import_port_type>src/RpiSpiDriver/SpiTransactPortAi.xml</import_port_type>
    <import_port_type>src/RpiSpiDriver/SpiDmaReplyPortAi.xml</import_port_type>

    <import_dictionary>src/RpiSpiDriver/Events.xml</import_dictionary>
    <import_dictionary>src/RpiSpiDriver/Telemetry.xml</import_dictionary>

    <ports>
        <port name="transactPolling" data_type="Drv::SpiTransact" kind="guarded_input" max_number="$RpiSpiChipSelects">
            <comment>
                Read/Write small amount of data by polling the SPI
            </comment>
        </port>

        <port name="transactDma" data_type="Drv::SpiTransact" kind="guarded_input" max_number="$RpiSpiChipSelects">
            <comment>
                Read/Write a large amount of data by generating a DMI request
                Reply to caller by sending a signal via the
            </comment>
        </port>

        <port name="replyDma" data_type="Drv::SpiDmaReply" kind="output" max_number="$RpiSpiChipSelects">
            <comment>
                Reply to a DMA transaction request once DMA has finished.
            </comment>
        </port>
    </ports>
</component>
